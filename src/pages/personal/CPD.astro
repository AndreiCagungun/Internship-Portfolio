---
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import Modal from "../../components/Modal.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Cloudstaff Pixoo Display</title>
    <meta name="description" content="" />
    <meta name="keywords" content="" />

    <!-- Favicons -->
    <link href="/assets/img/logo.png" rel="icon" />
    <link href="/assets/img/apple-touch-icon.png" rel="apple-touch-icon" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <!-- Vendor CSS Files -->
    <link
      href="/assets/vendor/bootstrap/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="/assets/vendor/bootstrap-icons/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link href="/assets/vendor/aos/aos.css" rel="stylesheet" />
    <link
      href="/assets/vendor/glightbox/css/glightbox.min.css"
      rel="stylesheet"
    />
    <link href="/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" />

    <!-- Main CSS File -->
    <link href="/assets/css/main.css" rel="stylesheet" />

    <!-- Inline CSS to Fix Project Information Positioning -->
  </head>

  <body class="portfolio-details-page">
    <Navbar />


    <main class="main">
      <!-- Page Title -->
      <div class="page-title accent-background">
        <div class="container">
          <h1>Cloudstaff Pixoo Display</h1>
          <nav class="breadcrumbs">
            <ol>
              <li><a href="/">Home</a></li>
              <li><a href="/Projects">Projects</a></li>
              <li><a href="/PersonalProjects">Personal Projects</a></li>
              <li class="current">CDP</li>
            </ol>
          </nav>
        </div>
      </div><!-- End Page Title -->

      <!-- Portfolio Details Section -->
      <section id="portfolio-details" class="portfolio-details section">
        <div class="container" data-aos="fade-up">
          <div class="portfolio-details-slider swiper init-swiper">
            <script type="application/json" class="swiper-config">
              {
                "loop": true,
                "speed": 600,
                "autoplay": {
                  "delay": 5000
                },
                "slidesPerView": "auto",
                "navigation": {
                  "nextEl": ".swiper-button-next",
                  "prevEl": ".swiper-button-prev"
                },
                "pagination": {
                  "el": ".swiper-pagination",
                  "type": "bullets",
                  "clickable": true
                }
              }
            </script>
            <div class="swiper-wrapper align-items-center">
              <div class="swiper-slide">
                <img
                  src="/assets/img/personalProjectLogos/KervinC/CDPoutput.png"
                  alt=""
                />
              </div>
            </div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
            <div class="swiper-pagination"></div>
          </div>

          <div class="row justify-content-between gy-4 mt-4">
            <div class="col-lg-8" data-aos="fade-up">
              <div class="portfolio-description">
                <h2>Overview</h2>
                <p>
                  The Cloudstaff Pixoo Display (CPD) elevates workplace
                  engagement by showcasing real-time updates and employee
                  recognition on dynamic Pixoo screens. With intuitive controls
                  and seamless data presentation, CPD enhances team
                  communication and boosts morale, ensuring a vibrant and
                  interactive environment for everyone.
                </p>
                <br />
                <br />

                <div class="row align-items-center">
                  <div class="col-md-6 d-flex justify-content-center">
                    <img
                      src="/assets/img/personalProjectLogos/KervinC/Media (10).jpg"
                      class="img-fluid zoomable-image"
                      style="max-width: 80%; height: auto; margin-top: 20px; margin-bottom: 20px; cursor: pointer;"
                      data-bs-toggle="modal"
                      data-bs-target="#imageModal"
                      onclick="setModalImage(this.src, this.alt)"
                    />
                  </div>
                  <div class="col-md-6">
                    <h3>Show Employee</h3>
                    <p>
                      Effortlessly highlights and appreciates Employee 1 by
                      displaying their profile on Pixoo.
                    </p>
                    <p>
                      This project showcases dynamic data visualization,
                      allowing quick recognition within the team.
                    </p>
                  </div>
                </div>
                <br />
                <br />

                <div class="row align-items-center">
                  <div
                    class="col-md-6 order-md-2 d-flex justify-content-center"
                  >
                    <img
                      src="/assets/img/personalProjectLogos/KervinC/Media (11).jpg"
                      class="img-fluid zoomable-image"
                      style="max-width: 80%; height: auto; margin-top: 20px; margin-bottom: 20px;cursor: pointer;"
                      data-bs-toggle="modal"
                      data-bs-target="#imageModal"
                      onclick="setModalImage(this.src, this.alt)"
                    />
                  </div>
                  <div class="col-md-6 order-md-1">
                    <h3>Clear Display</h3>
                    <p>
                      Instantly resets the Pixoo screen to a blank state,
                      readying it for fresh content.
                    </p>
                    <p>
                      This project showcases seamless transitions, efficiently
                      clearing ongoing displays with a simple command.
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-3" data-aos="fade-up" data-aos-delay="100">
              <div class="portfolio-info sticky">
                <h3>Project information</h3>
                <ul>
                  <li><strong>Developer</strong> KervinC</li>
                  <li><strong>Technology</strong> Divoom Pixoo 64</li>
                </ul>
              </div>
            </div>
          </div><!-- /Portfolio Details Section -->
        </div>

        <Footer />

        <Modal />

        <!-- Scroll Top -->
        <a
          href="#"
          id="scroll-top"
          class="scroll-top d-flex align-items-center justify-content-center"
          ><i class="bi bi-arrow-up-short"></i></a
        >

        <!-- Preloader -->
        <div id="preloader"></div>

        <!-- Vendor JS Files -->
        <script
          is:inline
          src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script is:inline src="/assets/vendor/php-email-form/validate.js"
        ></script>
        <script is:inline src="/assets/vendor/aos/aos.js"></script>
        <script
          is:inline
          src="/assets/vendor/purecounter/purecounter_vanilla.js"></script>
        <script is:inline src="/assets/vendor/glightbox/js/glightbox.min.js"
        ></script>
        <script is:inline src="/assets/vendor/swiper/swiper-bundle.min.js"
        ></script>
        <script
          is:inline
          src="/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
        <script
          is:inline
          src="/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>

        <!-- Main JS File -->
        <script is:inline src="/assets/js/main.js"></script>

      </section>
    </main></body>
</html>
